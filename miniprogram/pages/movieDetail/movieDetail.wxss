/* miniprogram/pages/movieDetail/movieDetail.wxss */
.movie-container{
  padding:30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #F7F9FB;
  position: relative;
  height: 100vh;
}
.movie-img{
  width: 300rpx;
  position: absolute;
  z-index: 9;
  top:25rpx;
}
.movie-detail{
  position: relative;
  top:100rpx;
  align-items: center;
  padding:50rpx;  
  border: 1px solid #E2E7ED;
  background: #ffffff;
  margin-bottom: 40rpx;
}
.movie-title{
  margin-top:300rpx;
  text-align: center;
}
.movie-des{
  position: relative;
  margin-top: 20rpx;
  font-size:36rpx;
}
.skip-buttons{
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-top:100rpx;
}
.skip-buttons .btn{
  flex: 1;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  border: 1px solid #7F99AF;
  color: #7F99AF;
  border-radius: 10rpx;
}
.skip-buttons .btn:first-child{
  margin-right: 20rpx;
}